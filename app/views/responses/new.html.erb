<div class="container">
  <%= simple_form_for @response do |f| %>
    <%= f.input :budget,
                required: true %>
    <%= f.input :location,
                required: true %>
      <%= f.input :cuisine,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item mr-3 mb-3',
                  collection: ["Western", "Chinese", "Malay", "Thai", "Indonesian", "Japanese", "Korean", "Indian", "Spanish", "French", "Italian"] %>
    <%= f.button :submit,
                  class: "btn btn-primary" %>
  <% end %>
</div>
