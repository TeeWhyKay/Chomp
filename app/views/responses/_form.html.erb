<div class="container">
  <%= simple_form_for([chomp_session, response], remote: true) do |f| %>
    <%= hidden_field_tag 'location', 'none'%>
    <%= f.input :budget,
                required: true, input_html: { min: '5' } %>
    <label for="response_location">Location *</label>
    <div class="search-form-control form-group">
      <% if response.address %>
        <%= f.input :address, label: false, input_html: { value: response.address } %>
      <% else %>
        <%= f.input :address, label: false, input_html: { value: "19 Cuppage Rd, Singapore 229451" } %>
      <% end %>
      <a href="#" id="get_location"><i class="fas fa-map-marker-alt"></i></a>
    </div>
    <%= f.input :cuisine,
                as: :check_boxes,
                input_html: { class: "tag-selector" },
                item_wrapper_class: 'tag-item mr-3 mb-3',
                collection: [ "Asian", "Chinese", "Western", "Japanese", "Italian", "Halal", "Indian", "Thai", "Korean", "Local", "Steamboat", "Desserts" ] %>
    <%= f.button :submit,
                  class: "btn btn-primary" %>
  <% end %>
</div>
