<div class="container d-flex">
  <div class="favorites-card">
    <h1>Your Favourites:</h1>
    <% if current_user.all_favorites.empty? %>
      <p>You do not have any restaurants in your favourites list</p>
    <% else %>
      <% @favorites.each do |favorite| %>
        <div class="card-product d-flex m-4 align-items-center ">
          <div class="w-100">
            <h3><%= link_to "#{favorite.name}", restaurant_url(favorite) %></h3>
            <p><%= favorite.address.strip %></p>
            <p><strong>Operating hours:</strong> <%= favorite.opening_time.strftime("%I:%M %p") %> ~ <%= favorite.closing_time.strftime("%I:%M %p") %><br>
            <strong>Google review score:</strong> <%= favorite.google_rating %><br></p>
          </div>
          <div class="img-card ml-2">
            <img src="https://images.pexels.com/photos/1484516/pexels-photo-1484516.jpeg?auto=compress&cs=tinysrgb&h=130" alt="Picture of restaurant">
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
