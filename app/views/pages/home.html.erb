
<div class="container d-flex flex-column justify-content-center my-5 w-50 py-4 px-5" style="background-color:white">
    <%= image_tag ("profile.png"), alt: "chomp-logo", class: "w-100 my-3" %>
    <%= simple_form_for :chomp_session, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="chomped" id="chomped" placeholder="Enter Session Code" style="text-align: center"/>
        </div>
            <button name="button" type="submit" class="btn btn-primary btn-block">
