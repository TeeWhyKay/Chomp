<% if current_page?(controller: '/pages', action: 'home') %>
<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon" id="home-navbar">
<% else %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<% end %>
  <% if current_page?(controller: '/pages', action: 'home') %>
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/du5rqng8z/image/upload/v1632887027/letschomp/white_favicon_m2nwjd.svg", alt: "chomp logo" %>
  <% end %>
  <% else %>
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/du5rqng8z/image/upload/v1632887027/letschomp/orange_favicon_wagyin.svg", alt: "chomp logo" %>
  <% end %>
  <% end %>

  <% if user_signed_in? %>
    <div class="nav-item dropdown">
      <%= link_to current_user.email, "#", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <%= link_to "My Favourites", favorites_path, class: "dropdown-item" %>
        <%= link_to "Edit my details", edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "My Dashboard", dashboard_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <div class="nav-item d-flex">
      <%= link_to "Login", new_user_session_path, class: "nav-link btn mr-2" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn bg-white text-primary" %>
    </div>
  <% end %>

</div>
