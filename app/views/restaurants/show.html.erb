<h1><%= @restaurant.name %> <small><%= @restaurant.address %></small></h1>
<h2>
  <%= pluralize @restaurant.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <h4><%= review.title %> <span><i class="fas fa-star"></i><%= review.rating %></span></h4>
      <p><%= review.content %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([ @restaurant, @review ], remote: true) do |f| %>
  <%= f.input :rating, collection: [['1 - Blegh!', 1], ['2 - Below Average', 2], ['3 - Alright', 3], ['4 - Not Bad', 4], ['5 - Amazing!', 5]], selected: 3 %>
  <%= f.input :title, as: :string %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit %>
<% end %>
